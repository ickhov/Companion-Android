<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordNewPasswordFragment"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_forgot_password_new_password_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09"/>
    
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_forgot_password_new_password_header"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_lock_open_24px"
            android:scaleType="fitCenter"
            app:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_title"/>
    
    <TextView
            android:id="@+id/fragment_forgot_password_new_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_email_instruct"/>
    
    <TextView
            android:id="@+id/fragment_forgot_password_new_password_email_instruct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_instruct_confirmation_code"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_code_layout"/>
    
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_forgot_password_new_password_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/colorSecondaryLight"
            app:startIconDrawable="@drawable/ic_code_24px"
            app:startIconTint="@color/colorSecondary"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_email_instruct"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_layout">
        
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_forgot_password_new_password_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:hint="@string/confirmation_code"
                android:textColorHint="@color/hint_color"/>
    
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_forgot_password_new_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/colorSecondaryLight"
            app:startIconDrawable="@drawable/ic_lock_open_24px"
            app:startIconTint="@color/colorSecondary"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_code_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_repeat_layout">
        
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_forgot_password_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:hint="@string/new_password"
                android:textColorHint="@color/hint_color"/>
    
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_forgot_password_new_password_repeat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/colorSecondaryLight"
            app:startIconDrawable="@drawable/ic_lock_open_24px"
            app:startIconTint="@color/colorSecondary"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_reset_button">
        
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_forgot_password_new_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:hint="@string/new_password_repeat"
                android:textColorHint="@color/hint_color"/>
    
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_forgot_password_new_password_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorSecondary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp"
            android:textSize="@dimen/button_text_size"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_repeat_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_forgot_password_new_password_resend_code_button"/>
    
    <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_forgot_password_new_password_resend_code_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resend_confirmation_code"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorSecondary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp"
            android:textSize="@dimen/button_text_size"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_forgot_password_new_password_reset_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>