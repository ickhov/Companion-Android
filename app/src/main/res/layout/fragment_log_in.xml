<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogInFragment">

    <TextView
            android:id="@+id/fragment_log_in_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:padding="24dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_log_in_email_label"/>

    <TextView
            android:id="@+id/fragment_log_in_email_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/email"
            app:layout_constraintTop_toBottomOf="@id/fragment_log_in_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_log_in_email"/>

    <EditText
            android:id="@+id/fragment_log_in_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            app:layout_constraintTop_toBottomOf="@id/fragment_log_in_email_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_log_in_username_label"/>

    <TextView
            android:id="@+id/fragment_log_in_username_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/username"
            app:layout_constraintTop_toBottomOf="@id/fragment_log_in_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_log_in_username"/>

    <EditText
            android:id="@+id/fragment_log_in_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/username_hint"
            app:layout_constraintTop_toBottomOf="@id/fragment_log_in_username_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_log_in_password_label"/>

    <TextView
            android:id="@+id/fragment_log_in_password_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/password"
            app:layout_constraintTop_toBottomOf="@id/fragment_log_in_username"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_log_in_password"/>

    <EditText
            android:id="@+id/fragment_log_in_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/password_hint"
            app:layout_constraintTop_toBottomOf="@id/fragment_log_in_password_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>