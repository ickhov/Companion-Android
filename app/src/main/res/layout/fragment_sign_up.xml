<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpFragment"
        android:background="@color/charcoal"
android:paddingStart="16dp"
android:paddingEnd="16dp">

    <TextView
            android:id="@+id/fragment_sign_up_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="35sp"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_up_email_label"/>

    <TextView
            android:id="@+id/fragment_sign_up_email_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/email"
            android:gravity="start|bottom"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_up_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_up_email_layout"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxBackgroundColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_up_email_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_up_username_label">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
        android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/fragment_sign_up_username_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/username"
            android:gravity="start|bottom"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_up_email_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_up_username_layout"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxBackgroundColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_up_username_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_up_password_label">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_sign_up_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/fragment_sign_up_password_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/password"
            android:gravity="start|bottom"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_up_username_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_up_password_layout"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:boxBackgroundColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_up_password_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>